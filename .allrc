#!/bin/bash
[[ -f ~/.path ]] && source ~/.path

function mkcd {
    mkdir -p $1
    cd $1
}

function rmcd {
    local dir=$(pwd)
    cd ..
    if [ "$1" = "-f" ]; then
        rm -rf $dir
    else
        echo "remove dir $dir? [y/any]"
        read answ
        [[ "$answ" = "y" ]] && rm -rf $dir
    fi
}
